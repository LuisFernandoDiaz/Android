<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pictureCard_cardview"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview1"
    app:cardCornerRadius="@dimen/corner_radius_cardview"
    android:layout_marginBottom="32dp"

    >

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <ImageView
            android:id="@+id/pictureCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_cardview1"
            android:background="@drawable/pizzaaaa"
            android:scaleType="centerCrop"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:background="@color/backgroundText_Griss"
            android:paddingLeft="@dimen/activity_vertical_margin1"
            android:paddingBottom="@dimen/activity_vertical_margin1">

            <TextView
                android:id="@+id/techoCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/travel"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_username_card2" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="@color/backgroundText_Griss"
            android:paddingLeft="@dimen/activity_vertical_margin1"
            android:paddingBottom="@dimen/activity_vertical_margin1">

            <TextView
                android:id="@+id/namePizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username_card1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_username_card2" />

            <TextView
                android:id="@+id/lugarPizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lugarCard_card"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_username_card1" />

            <TextView
                android:id="@+id/tiempoPizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tiempo_card"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_username_card1" />

        </LinearLayout>


    </FrameLayout>


</androidx.cardview.widget.CardView>



